{
	"name": "vscode-todo-bar",
	"displayName": "Todo Bar",
	"description": "Focus on the task at hand. It stays in your status bar.",
	"version": "0.0.1",
	"author": "Phalangers",
	"publisher": "phalangers",
	"repository": {
		"type": "git",
		"url": "https://github.com/Phalangers/vscode-todo-bar"
	},
	"bugs": {
		"url": "https://github.com/Phalangers/vscode-todo-bar/issues"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.66.0"
	},
	"keywords": [
		"vscode",
		"todo",
		"line",
		"copy",
		"status",
		"bar",
		"focus"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:todo-bar.set-todo"
	],
	"icon": "assets/icon.png",
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "todo-bar.set-todo",
				"title": "Todo Bar: Set Todo"
			},
			{
				"command": "todo-bar.clear",
				"title": "Todo Bar: Clear"
			}
		],
		"keybindings": [
			{
				"command": "todo-bar.set-todo",
				"key": "ctrl+alt+x",
				"mac": "cmd+alt+x"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.66.0",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"vsce": "^2.7.0"
	}
}